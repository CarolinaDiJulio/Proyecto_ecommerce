<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View mi.proyecto View List -->
    <record id="view_mi_proyecto_list" model="ir.ui.view">
        <field name="name">view.mi.proyecto.list</field>
        <field name="model">mi.proyecto</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <!-- View mi.proyecto form -->
    <record id="view_mi_proyecto_form" model="ir.ui.view">
        <field name="name">view.mi.proyecto.form</field>
        <field name="model">mi.proyecto</field>
        <field name="arch" type="xml">
            <form string="Mi Proyecto">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <div class="oe_title">
                        <label for="descripcion"/>
                        <p>
                            <field name="descripcion" placeholder="DescripciÃ³n..."/>
                        </p>
                    </div>
                </sheet>
            </form>
        </field>
    </record> 
    
    <!-- View mi.proyecto kanban -->
    <record id="view_mi_proyecto_kanban" model="ir.ui.view">
        <field name="name">view.mi.proyecto.kanban</field>
        <field name="model">mi.proyecto</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="descripcion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="descripcion"/></div> 
                            </div>
                            <br/>
                            <footer>
                                <button type="action" name="%(action_ver_etapas_de_proyecto)d" context="{}" class="btn btn-primary btn-sm  d-flex justify-content-center">
                                    Ver Etapas
                                </button>
                                <br/>
                                <button type="action" name="%(action_ver_tareas_de_proyecto)d" context="{}" class="btn btn-primary btn-sm  d-flex justify-content-center">
                                    Ver Tareas
                                </button>
                            </footer>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

   

</odoo>
