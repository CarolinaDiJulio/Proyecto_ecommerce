<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View categorias View List -->
    <record id="view_categorias_list" model="ir.ui.view">
        <field name="name">view.categorias.list</field>
        <field name="model">categorias</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View categorias form -->
    <record id="view_categorias_form" model="ir.ui.view">
        <field name="name">view.categorias.form</field>
        <field name="model">categorias</field>
        <field name="arch" type="xml">
            <form string="Categorias">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
